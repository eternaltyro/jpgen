!!! 5
%html(class="no-js" lang="en")
  %head
    %meta{ :charset => "utf-8" }
    %meta{ :name => 'viewport', :content => 'width=device-width, initial-scale=1.0' }
    = stylesheet_link_tag "normalize", "all"
    = javascript_include_tag "all"
    %title= data.page.title

  %body{ :class => page_classes }
    #container
      %header
        %h1.with-subheading= data.page.title
        %p.subheading
          %em
            built with the
            %a(href='http://crypto.stanford.edu/sjcl/') Stanford Javascript Crypto Library

      #main{ :role => 'main' }
        = yield

      %footer
        = partial :footer
    / ! end of #container